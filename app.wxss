page { background-color: #f3f4f6; font-family: sans-serif; }
.container { padding: 24rpx; }
.title { font-size: 40rpx; font-weight: 700; color: #111827; margin-bottom: 20rpx; }
.card { background:#fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.06); }
.btn-primary { background:#6366f1; color:#fff; padding: 20rpx; border-radius: 12rpx; }
.btn { background:#111827; color:#fff; padding: 20rpx; border-radius: 12rpx; }
.badge { padding: 8rpx 16rpx; border-radius: 9999rpx; font-size: 22rpx; font-weight: 600; }
.badge-pending { background:#fca5a5; color:#7f1d1d; }
.badge-assigned { background:#fde047; color:#854d0e; }
.badge-accepted { background:#60a5fa; color:#1e3a8a; }
.badge-on-site { background:#34d399; color:#065f46; }
.badge-completed { background:#a78bfa; color:#4c1d95; }
.hr { height: 1px; background: #e5e7eb; margin: 16rpx 0; }
