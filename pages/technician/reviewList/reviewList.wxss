.container { padding: 16rpx; background: #f6f7fb; min-height: 100vh; }
.loading { padding: 40rpx; text-align: center; color: #888; }
.card {
  background: #fff; margin-bottom: 20rpx; padding: 24rpx;
  border-radius: 12rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.row { margin-bottom: 10rpx; color: #333; }
.title { display: flex; justify-content: space-between; align-items: center; }
.device { font-weight: 600; font-size: 30rpx; }
.status { font-size: 24rpx; color: #16a34a; }
.sub { color: #555; }
.addr { color: #666; }
.meta { color: #999; font-size: 24rpx; }
.review-hint { margin-top: 8rpx; color: #2563eb; font-size: 24rpx; }
.review-hint.empty { color: #999; }
.empty { text-align: center; color: #999; margin-top: 200rpx; font-size: 30rpx; }
