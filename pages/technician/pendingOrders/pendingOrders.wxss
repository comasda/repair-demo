.container {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.order-body text {
  display: block;
  margin: 5rpx 0;
  color: #333;
}

.order-actions {
  margin-top: 10rpx;
  display: flex;
  gap: 10rpx;
}

.empty {
  text-align: center;
  margin-top: 100rpx;
  color: #999;
}
