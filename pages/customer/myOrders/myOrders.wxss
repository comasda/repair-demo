.container {
  padding: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.order-card {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.status {
  color: #1890ff; /* 蓝色状态 */
}

.time {
  color: #999;
  font-size: 24rpx;
}

.order-body text {
  display: block;
  margin: 6rpx 0;
  color: #333;
}

.empty {
  text-align: center;
  margin-top: 100rpx;
  color: #999;
}
