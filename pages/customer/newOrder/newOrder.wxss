.container {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  background: #fff;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.section {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.images {
  display: flex;
  flex-wrap: wrap;
}

.preview {
  width: 160rpx;
  height: 160rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(90deg, #6366f1, #4f46e5);
  color: white;
  font-size: 32rpx;
  padding: 26rpx;
  border-radius: 50rpx;
  text-align: center;
}

.form-item { margin: 16rpx 0; }
.row { display: flex; align-items: center; }
.location-hint { color: #666; font-size: 26rpx; margin-top: 8rpx; }

.choose-btn { margin-top: 12rpx; }

.img-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}
.img-cell {
  position: relative;
  width: 100%;
  padding-top: 100%;           /* 正方形占位 */
  background: #f3f4f6;
  border-radius: 12rpx;
  overflow: hidden;
}
.thumb {
  position: absolute; left: 0; top: 0; right: 0; bottom: 0;
  width: 100%; height: 100%;
}
.img-del {
  position: absolute; right: 6rpx; top: 6rpx;
  width: 36rpx; height: 36rpx; line-height: 36rpx;
  text-align: center; color: #fff; background: rgba(0,0,0,.55);
  border-radius: 50%;
  font-size: 28rpx;
}
