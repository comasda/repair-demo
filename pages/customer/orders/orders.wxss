.container {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.order-item {
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.order-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.order-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
}

.empty {
  text-align: center;
  margin-top: 200rpx;
  color: #999;
  font-size: 28rpx;
}
