.container {
  background-color: #f3f4f6;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 顶部统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-between;
  background: linear-gradient(90deg, #3b82f6, #6366f1);
  border-radius: 20rpx;
  padding: 30rpx 0;
  margin-bottom: 40rpx;
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.15);
}
.stat-item {
  flex: 1;
  text-align: center;
}
.stat-num {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
}
.stat-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.card{
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

/* 图标底框专用：细描边 + 适当内边距 */
.menu-wrapper{
  padding-top: 16rpx;
  padding-bottom: 16rpx;
  border: 1rpx solid #E5E7EB;   /* 灰色细描边 */
  box-sizing: border-box;
}

/* 功能入口卡片 */
.grid{
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.grid-item{
  width: 25%;
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icon{
  width: 96rpx;
  height: 96rpx;
  display: block;
}
.label{
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #6B7280; /* 类似注册页灰度 */
  line-height: 1.2;
  text-align: center;
  white-space: nowrap;
}

/* 点击反馈（与注册页一致的轻压态） */
.item:active{ opacity: 0.8; }