<view class="container" wx:if="{{order}}">
  <view class="order-info">
    <text>设备：{{order.device}}</text>
    <text>问题：{{order.issue}}</text>
    <text>状态：{{order.status}}</text>
    <text>电话：{{order.phone}}</text>
    <text>地址：{{order.address}}</text>
  </view>

  <!-- 历史记录 -->
  <view class="order-history">
    <block wx:for="{{order.history}}" wx:key="time">
      <text>{{item.time}} - {{item.note}}</text>
    </block>
  </view>

  <!-- 客户操作 -->
  <button wx:if="{{role === 'customer'}}" bindtap="goReview">去评价</button>

  <!-- 师傅操作 -->
  <button wx:if="{{role === 'technician' && order.status !== 'done'}}" bindtap="markCompleted">标记完成</button>
</view>
