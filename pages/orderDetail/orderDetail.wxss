.container { padding: 30rpx; }
.title { font-size: 36rpx; font-weight: bold; margin-bottom: 20rpx; }
.section { margin-bottom: 20rpx; font-size: 28rpx; line-height: 40rpx; }
.label { font-weight: bold; margin-right: 10rpx; }
.btn-primary {
  background: linear-gradient(90deg, #3b82f6, #06b6d4);
  color: #fff;
  padding: 20rpx;
  border-radius: 50rpx;
  margin-top: 20rpx;
}
.images { display: flex; flex-wrap: wrap; margin-top: 20rpx; }
.preview { width: 200rpx; height: 200rpx; margin: 10rpx; border-radius: 10rpx; }
