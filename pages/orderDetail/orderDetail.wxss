.container {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.order-body text {
  display: block;
  margin: 8rpx 0;
  color: #333;
}

.order-images {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.order-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.primary-btn.disabled {
  opacity: 0.5;
}
.hint { margin: 16rpx 0; color: #666; font-size: 26rpx; }
.hint .sub { color: #999; font-size: 24rpx; }
