.container {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.order-body text {
  display: block;
  margin: 8rpx 0;
  color: #333;
}

.order-images {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.order-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.primary-btn.disabled {
  opacity: 0.5;
}
.hint { margin: 16rpx 0; color: #666; font-size: 26rpx; }
.hint .sub { color: #999; font-size: 24rpx; }

/* 现场图片区域 */
.section { margin-top: 24rpx; }
.section-title { font-size: 28rpx; color: #374151; margin-bottom: 12rpx; }

.img-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}
.img-cell {
  position: relative;
  width: 100%;
  padding-top: 100%;     /* 正方形格子 */
  background: #f3f4f6;
  border-radius: 12rpx;
  overflow: hidden;
}
.thumb {
  position: absolute; left: 0; top: 0; right: 0; bottom: 0;
  width: 100%; height: 100%;
}

/* ==== 签到上传图片区域 ==== */
.checkin-upload-box {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
}

.checkin-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.checkin-images {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.img-item {
  width: 150rpx;
  height: 150rpx;
  position: relative;
}

.img-item image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
}

.remove-btn {
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
}

.img-add {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #999;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #999;
}

.checkin-section {
  margin: 16rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #111827;
}

.checkin-slot {
  margin-bottom: 16rpx;
  padding: 12rpx;
  border-radius: 10rpx;
  background-color: #f9fafb;
}

.slot-header {
  font-size: 28rpx;
  font-weight: 500;
  color: #111827;
}

.slot-tips {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
  margin-bottom: 8rpx;
}

.slot-body {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.slot-uploader {
  flex: 1;
  min-height: 140rpx;
  border-radius: 10rpx;
  border: 1rpx dashed #d1d5db;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #6b7280;
}

.slot-uploader-plus {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 8rpx;
}

.slot-uploader-text {
  font-size: 24rpx;
}

.slot-media {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  background-color: #e5e7eb;
}

.slot-remove-btn {
  margin-left: 12rpx;
  font-size: 24rpx;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background-color: #fee2e2;
  color: #b91c1c;
  border: none;
}

.checkin-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 8rpx;
}

.btn-secondary {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  border: 1rpx solid #d1d5db;
  background-color: #f3f4f6;
  color: #111827;
  font-size: 26rpx;
}

.btn-primary {
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  border: none;
  background-color: #2563eb;
  color: #ffffff;
  font-size: 26rpx;
}

