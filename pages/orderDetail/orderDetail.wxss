.container {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.order-body text {
  display: block;
  margin: 8rpx 0;
  color: #333;
}

.order-images {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.order-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.primary-btn.disabled {
  opacity: 0.5;
}
.hint { margin: 16rpx 0; color: #666; font-size: 26rpx; }
.hint .sub { color: #999; font-size: 24rpx; }

/* 现场图片区域 */
.section { margin-top: 24rpx; }
.section-title { font-size: 28rpx; color: #374151; margin-bottom: 12rpx; }

.img-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}
.img-cell {
  position: relative;
  width: 100%;
  padding-top: 100%;     /* 正方形格子 */
  background: #f3f4f6;
  border-radius: 12rpx;
  overflow: hidden;
}
.thumb {
  position: absolute; left: 0; top: 0; right: 0; bottom: 0;
  width: 100%; height: 100%;
}

/* ==== 签到上传图片区域 ==== */
.checkin-upload-box {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
}

.checkin-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.checkin-images {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.img-item {
  width: 150rpx;
  height: 150rpx;
  position: relative;
}

.img-item image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
}

.remove-btn {
  position: absolute;
  right: -8rpx;
  top: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
}

.img-add {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #999;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #999;
}
