<view class="container">
  <view class="card">
    <view class="title">商用厨具维修管理系统</view>
    <view style="color:#6b7280;margin-bottom:20rpx;">请选择您的身份</view>

    <picker class="card" mode="selector" range="{{roles}}" bindchange="onRoleChange">
      <view>当前身份：{{currentRoleName}}</view>
    </picker>

    <view class="hr"></view>

    <button class="btn-primary" bindtap="goOrders">进入工单列表</button>
    <view style="height:20rpx;"></view>
    <button class="btn" bindtap="goDashboard">查看统计面板（管理员）</button>
    <view style="height:20rpx;"></view>
    <button class="btn" bindtap="goNewOrder">提交报修（客户）</button>
  </view>
</view>
