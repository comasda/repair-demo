<view class="container">
  <view class="title">工单列表（{{roleName}}）</view>

  <block wx:if="{{orders.length}}">
    <block wx:for="{{orders}}" wx:key="id">
      <view class="card" bindtap="goDetail" data-id="{{item.id}}">
        <view style="display:flex;justify-content:space-between;align-items:center;">
          <view style="font-weight:700;">{{item.id}}</view>
          <view class="badge badge-{{item.status}}">{{statusMap[item.status]}}</view>
        </view>
        <view style="color:#374151;margin-top:12rpx;">客户：{{item.customer}}</view>
        <view style="color:#374151;margin-top:8rpx;">设备：{{item.device}}</view>
        <view style="color:#6b7280;margin-top:8rpx;">时间：{{item.time}}</view>
      </view>
    </block>
  </block>
  <block wx:else>
    <view class="card" style="color:#6b7280;">暂无工单</view>
  </block>
</view>
