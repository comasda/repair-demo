<view class="container">

  <!-- 顶部 Logo + 标题 -->
  <view class="logo-box">
    <image src="/assets/logo.png" class="logo"/>
    <text class="title">维修管理系统</text>
  </view>

  <!-- 登录方式 -->
  <view class="btn-group">
    <button class="btn-primary" bindtap="choosePhoneLogin">📱 手机号登录</button>
    <button class="btn-wechat" open-type="getUserProfile" bindtap="loginWithWechat">💚 微信登录</button>
  </view>

  <!-- 底部注册 -->
  <view class="footer">
    <text>没有账号？</text>
    <text class="link" bindtap="goRegister">去注册</text>
  </view>
</view>
