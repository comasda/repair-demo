<view class="container">

  <!-- 第一步：选择方式 -->
  <view wx:if="{{step==='choose'}}" class="choose-box">
    <button class="btn-primary" bindtap="choosePhoneLogin">手机号登录</button>
    <button class="btn" open-type="getUserProfile" bindtap="loginWithWechat">微信登录</button>
    <view class="link" bindtap="goRegister">没有账号？去注册</view>
  </view>

  <!-- 第二步：手机号登录表单 -->
  <view wx:if="{{step==='phone'}}" class="form-box">
    <input type="text" placeholder="请输入手机号" bindinput="onPhoneInput" class="card"/>
    <input type="password" placeholder="请输入密码" bindinput="onPwdInput" class="card"/>
    <button class="btn-primary" bindtap="loginWithPhone">登录</button>
    <view class="link" bindtap="backToChoose">返回</view>
  </view>

</view>
