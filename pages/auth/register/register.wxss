.container {
  padding: 40rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-align: center;
}
.input {
  width: 100%;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.picker {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #374151;
}
.btn-primary {
  background: linear-gradient(90deg, #6366f1, #4f46e5);
  color: white;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 50rpx;
}
