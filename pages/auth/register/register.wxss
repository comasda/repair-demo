/* ===== 注册页基础布局 ===== */
.page {
  padding: 32rpx;
  background: #f7f8fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.05);
  padding: 24rpx 28rpx;
}

/* 每一行表单 */
.row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f1f2f5;
}
.row:last-child {
  border-bottom: none;
}

/* 左侧 label */
.row text {
  width: 160rpx;
  flex: 0 0 160rpx;
  color: #444;
  font-size: 28rpx;
}

/* 输入框与选择器 */
.row input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 20rpx;
  background: #f7f7f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

.picker {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 20rpx;
  background: #f7f7f9;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #111;
}

/* 验证码行：按钮靠右 */
.row button[size="mini"] {
  margin-left: auto;
}

/* 获取验证码按钮样式（可与 disabled 结合） */
.btn-code {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 24rpx;
  border-radius: 12rpx;
  background: #111827;
  color: #fff;
  font-size: 26rpx;
  border: none;
}
.btn-code.disabled {
  background: #c7c9cf !important;
  color: #fff !important;
}

/* 提交按钮 */
button[type="primary"] {
  margin-top: 28rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 16rpx;
  background: #111827;
}

/* 轻量提示/分组标题（可选） */
.section-title {
  margin: 28rpx 0 8rpx;
  padding-left: 8rpx;
  color: #666;
  font-size: 24rpx;
}

/* 容错：小屏留白 */
.safe-bottom {
  height: 40rpx;
}
