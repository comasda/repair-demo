<view class="container">

  <view class="title">用户注册</view>

  <view class="form-box">
    <input type="text" placeholder="请输入手机号" maxlength="11" bindinput="onPhoneInput" class="input"/>

    <!-- 验证码组件 -->
    <verify-code 
      phone="{{phone}}" 
      bind:codeinput="onCodeInput" 
      bind:codesent="onCodeSent"
    />

    <input type="password" placeholder="请输入密码" bindinput="onPwdInput" class="input"/>
    <input type="password" placeholder="请确认密码" bindinput="onConfirmPwdInput" class="input"/>

    <picker mode="selector" range="{{roles}}" bindchange="onRoleChange">
      <view class="picker">选择身份：{{roleText}}</view>
    </picker>
  </view>

  <button class="btn-primary" bindtap="registerUser">注册</button>
</view>
