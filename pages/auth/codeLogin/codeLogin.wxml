<view class="container">

  <view class="title">验证码登录</view>

  <view class="form-box">
    <input type="text" placeholder="请输入手机号" maxlength="11" bindinput="onPhoneInput" class="input"/>
    <view class="code-row">
      <input type="text" placeholder="请输入验证码" bindinput="onCodeInput" class="input-code"/>
      <button class="btn-send" bindtap="sendCode">{{timer > 0 ? timer + 's 重发' : '发送验证码'}}</button>
    </view>
  </view>

  <button class="btn-primary" bindtap="loginWithCode">登录</button>

  <view class="footer">
    <text bindtap="backToLogin">← 返回登录方式</text>
  </view>
</view>
