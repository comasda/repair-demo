.code-row {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-bottom: 30rpx;
}

.input-code {
  flex: 1;
  margin-right: 20rpx;
  padding: 20rpx;
  border: 2rpx solid #d1d5db;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.btn-send {
  width: 200rpx;
  background-color: #2563eb;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
}
